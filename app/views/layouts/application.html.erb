<!DOCTYPE html>
<html>
  <head>
    <title>StripeConnect</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <ul class="nav">
    <% if user_signed_in? %>
        <li>Welcome, <%= current_user.email %></li>
        <li><%= link_to 'Dashboard', root_url %></li>
        <li><%= link_to 'Products', products_url %></li>
        <li><%= link_to 'Settings', pages_settings_url %></li>
        <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
    <% end %>
        <li><%= link_to "Cart #{get_cart_count}", cart_items_products_path %></li>
      </ul>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
